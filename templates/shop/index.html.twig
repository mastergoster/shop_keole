{% extends 'base.html.twig' %}

{% block title %}shop
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-3 mb-4">Produit</h1>
		<div class="mb-4">Il y a
			{{ items.getTotalItemCount }}
			produits(s)
		</div>

		{% if not items.items is same as([]) %}

			<div class="row">
				{% for product in items %}
					<div class="col-md-4">
						<div class="card mb-4">
							<img src="https://via.placeholder.com/200x150" alt="{{ product.nom }}" class="card-img-top">

							<div class="card-body">
								<h5 class="card-title">{{ product.nom }}</h5>
								<p class="card-text">{{ product.description }}</p>
								<div class="d-flex justify-content-between align-item-center">
									<a href="{{ path('product.detail', {id: product.id}) }}" class="btn btn-dark">voir +</a>
									<span class="h5 mt-auto">{{ product.prix }}
										â‚¬</span>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
				<div class="navigation d-flex justify-content-center mt-4">
					{{ knp_pagination_render(items) }}
				</div>

			</div>

		{% else %}
			<h4>Il n'y a pas de produits</h4>
		{% endif %}

	</div>

{% endblock %}
